# ================================================================
# STEP 2 — Preprocessing Improvements
# ================================================================

def preprocess(text):
    text = text.lower()

    punctuation = ".,!?;:-()'\""
    for p in punctuation:
        text = text.replace(p, "")

    # Normalize repeated characters (goooood → good)
    cleaned = []
    for word in text.split():
        new_w = ""
        for i, ch in enumerate(word):
            if i > 1 and ch == word[i-1] == word[i-2]:
                continue  # skip 3rd repeated char
            new_w += ch
        cleaned.append(new_w)

    return cleaned



# ================================================================
# STEP 3 — Build word frequency dictionaries
# ================================================================

pos_words = {}
neg_words = {}

for review, label in zip(reviews, labels):
    words = preprocess(review)

    # Remove stopwords
    stopwords = {"i", "this", "is", "a", "the", "it", "am", "was"}
    words = [w for w in words if w not in stopwords]

    if label == "pos":
        for w in words:
            pos_words[w] = pos_words.get(w, 0) + 1
    else:
        for w in words:
            neg_words[w] = neg_words.get(w, 0) + 1



# ================================================================
# STEP 4 — Prediction function (improved with Laplace smoothing)
# ================================================================

def predict_sentiment(text):
    words = preprocess(text)

    pos_score = 1   # Laplace smoothing
    neg_score = 1

    for w in words:
        pos_score += pos_words.get(w, 0)
        neg_score += neg_words.get(w, 0)

    if pos_score > neg_score:
        return "Positive"
    elif neg_score > pos_score:
        return "Negative"
    else:
        return "Neutral"



# ================================================================
# STEP 5 — Real-time user input
# ================================================================

text = input("Enter your sentence: ")
print("Prediction:", predict_sentiment(text))



